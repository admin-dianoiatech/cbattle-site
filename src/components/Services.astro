---
const services = [
  {
    name: "Standard Package",
    price: "₱25,000",
    period: "system lease",
    features: [
      "10 devices (tellers/cashiers) - excluded personnel fee",
      "1 admin device",
      "Setup & Tech Support",
      "Up to 100 Hybrid Accounts (Wallet Based Users)",
      "QR Code transactions",
      "Automated Reports and exportable to PDF and can send via email",
      "Real-time updates"
    ],
    recommended: false
  },
  {
    name: "Pro Package",
    price: "₱35,000",
    period: "lease fee",
    features: [
      "12 devices (tellers/cashiers) - excluded personnel fee",
      "4 kiosk device",
      "1 admin device",
      "Setup & Tech Support",
      "Unlimited Hybrid Accounts (Wallet Based Users)",
      "Automated Reports and exportable to PDF and can send via email",
      "Real-time updates"
    ],
    recommended: true
  },
  {
    name: "Premium Package",
    price: "₱50,000",
    period: "lease fee",
    features: [
      "15 devices (tellers/cashiers) - excluded personnel fee",
      "10 kiosk device",
      "1 admin device",
      "Setup & Tech Support",
      "Unlimited Hybrid Accounts (Wallet Based Users)",
      "Automated Reports and exportable to PDF and can send via email",
      "Real-time updates"
    ],
    recommended: false
  }
];

const pricingModels = [
  {
    name: "Fight-Based Fee",
    description: "Pay based on the number of fights in your event",
    tiers: [
      { range: "Up to 50 Fights", price: "FREE" },
      { range: "51-100 Fights", price: "₱500/fight" },
      { range: "101-200 Fights", price: "₱400/fight" },
      { range: "201+ Fights", price: "₱300/fight" }
    ]
  },
  {
    name: "Commission-Based Option",
    description: "Pay a percentage of the total pot",
    tiers: [
      { range: "Up to ₱1M Total Pot", price: "10% Commission" },
      { range: "₱1M-2M", price: "9% Commission" },
      { range: "₱2M+", price: "8% Commission" }
    ]
  }
];
---
<section class="py-20 bg-white" id="services">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-4">Pricing Plans</h2>
    <p class="text-xl text-gray-600 text-center mb-8 max-w-2xl mx-auto">
      Choose your system lease plan and preferred pricing model
    </p>
    
    <div class="text-center mb-12">
      <p class="text-gray-600 mb-4">Personnel fee: <span class="font-bold text-black">₱1,000</span> per person</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-16">
      {services.map(service => (
        <div class={`relative bg-white rounded-2xl shadow-lg p-8 border-2 ${service.recommended ? 'border-c-battle-red' : 'border-gray-100'}`}>
          {service.recommended && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="bg-c-battle-red text-white px-4 py-1 rounded-full text-sm">
                Most Popular
              </span>
            </div>
          )}
          
          <div class="text-center mb-8">
            <h3 class="text-2xl font-bold mb-4">{service.name}</h3>
            <div class="flex flex-col items-center justify-center mb-4">
              <span class="text-4xl font-bold">{service.price}</span>
              <span class="text-gray-500 text-sm">{service.period}</span>
              <span class="text-gray-500 text-xs mt-1">+ ₱15,000 one-time setup & support fee</span>
            </div>
          </div>
          
          <ul class="space-y-4 mb-8">
            {service.features.map(feature => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
          
          <div class="text-center">
            <a
              href="#contact"
              class={`inline-block px-6 py-3 rounded-lg font-semibold transition-colors ${
                service.recommended
                  ? 'bg-c-battle-red text-white hover:bg-red-700'
                  : 'bg-gray-900 text-white hover:bg-gray-800'
              }`}
            >
              Contact Sales
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="mb-8 text-center">
      <h3 class="text-3xl font-bold mb-4">Choose Your Pricing Model</h3>
      <p class="text-gray-600 max-w-2xl mx-auto">
        After selecting your system lease plan above, choose one of these pricing models for your events:
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {pricingModels.map(model => (
        <div class="bg-white rounded-2xl shadow-lg p-8 border-2 border-gray-100">
          <h4 class="text-2xl font-bold mb-4 text-center">{model.name}</h4>
          <p class="text-gray-600 mb-6 text-center">{model.description}</p>
          <div class="space-y-4">
            {model.tiers.map(tier => (
              <div class="flex justify-between items-center py-2 border-b border-gray-100">
                <span class="font-medium">{tier.range}</span>
                <span class="text-c-battle-red font-semibold">{tier.price}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>