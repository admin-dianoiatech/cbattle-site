---
const services = [
  {
    name: "Standard Package",
    price: "₱25,000",
    period: "system lease",
    features: [
      "10 devices (tellers/cashiers)",
      "1 admin device",
      "Setup & Tech Support",
      "Up to 100 Hybrid Accounts (Wallet Based Users)",
      "QR Code transactions",
      "Automated Reports and exportable to PDF and can send via email",
      "Real-time updates",
      "Fee per fight",
    ],
    recommended: false,
  },
  {
    name: "Pro Package",
    price: "₱35,000",
    period: "system lease",
    features: [
      "12 devices (tellers/cashiers)",
      "4 kiosk device",
      "1 admin device",
      "Setup & Tech Support",
      "Unlimited Hybrid Accounts (Wallet Based Users)",
      "Automated Reports and exportable to PDF and can send via email",
      "Real-time updates",
      "Fee per fight",
    ],
    recommended: true,
  },
  {
    name: "Premium Package",
    price: "₱50,000",
    period: "system lease",
    features: [
      "15 devices (tellers/cashiers)",
      "10 kiosk device",
      "1 admin device",
      "Setup & Tech Support",
      "Unlimited Hybrid Accounts (Wallet Based Users)",
      "Automated Reports and exportable to PDF and can send via email",
      "Real-time updates",
      "Fee per fight",
    ],
    recommended: false,
  },
  {
    name: "Custom Package",
    price: "Custom",
    period: "flexible pricing",
    features: [
      "Customizable number of devices",
      "Customizable number of kiosk devices",
      "Multiple admin accounts",
      "Setup & Tech Support",
      "Unlimited Hybrid Accounts",
      "Custom integration options",
      "Custom features based on requirements",
      "Custom fight pricing available",
    ],
    recommended: false,
  },
] as const;

const commissionModel = {
  name: "Commission-Based Plan",
  description:
    "Pay only when you earn - our service fee is based on your total commission",
  inclusions: [
    "Personnel fee included (FREE)",
    "One-time setup and support fee included (FREE)",
    "All features included",
    "No upfront costs - pay only when profitable",
  ],
  tiers: [
    {
      range: "Up to ₱1M total commission",
      fee: "15%",
      description: "Perfect for growing operations",
      example: "Example: ₱750K total commission = ₱112.5K service fee",
    },
    {
      range: "₱1M+ total commission",
      fee: "10%",
      description: "High-volume operations",
      example: "Example: ₱1.5M total commission = ₱150K service fee",
    },
  ],
} as const;
---

<section class="py-20" id="services">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-4">Choose Your Plan</h2>
    <p class="text-xl text-gray-600 text-center mb-8 max-w-2xl mx-auto">
      Select between Package Plan or Commission-Based Plan
    </p>

    <div class="grid md:grid-cols-4 gap-8 mb-16">
      {
        services.map((service) => (
          <div
            class={`relative bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg p-8 border-2 flex flex-col ${service.recommended ? "border-c-battle-red" : "border-gray-200"}`}
          >
            {service.recommended && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-c-battle-red text-white px-4 py-1 rounded-full text-sm">
                  Most Popular
                </span>
              </div>
            )}

            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold mb-4">{service.name}</h3>
              <div class="flex flex-col items-center justify-center mb-4">
                <span class="text-4xl font-bold">{service.price}</span>
                <span class="text-gray-500 text-sm">{service.period}</span>
                <span class="text-gray-500 text-xs mt-1">
                  + ₱15,000 one-time setup & support fee
                </span>
              </div>
            </div>

            <ul class="space-y-4 mb-8 flex-grow">
              {service.features.map((feature, index) => (
                <li class="flex items-start">
                  <svg
                    class="w-5 h-5 text-green-500 mr-3 mt-1 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <div class="flex flex-col">
                    <span>{feature}</span>
                    {index === 0 && service.name !== "Custom Package" && (
                      <span class="text-xs text-gray-500 mt-1">
                        Personnel fee: ₱1,000 per person
                      </span>
                    )}
                    {feature === "Fee per fight" &&
                      service.name !== "Custom Package" && (
                        <div class="text-xs text-gray-500 mt-1 space-y-1">
                          <div>- Up to 50 fights (FREE)</div>
                          <div>- 51-200 fights (₱500 /fight)</div>
                          <div>- 201+ fights (₱300 /fight)</div>
                        </div>
                      )}
                  </div>
                </li>
              ))}
            </ul>

            <div class="mt-auto px-4">
              <a
                href="#contact"
                class={`block w-full text-center py-3 rounded-lg font-semibold transition-colors ${
                  service.recommended
                    ? "bg-c-battle-red text-white hover:bg-red-700"
                    : "bg-gray-900 text-white hover:bg-gray-800"
                }`}
              >
                Get Started
              </a>
            </div>
          </div>
        ))
      }
    </div>

    <div
      id="commission"
      class="max-w-4xl mx-auto bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg p-8 border-2 border-gray-200"
    >
      <h3 class="text-3xl font-bold mb-4 text-center">
        {commissionModel.name}
      </h3>
      <p class="text-gray-600 mb-8 text-center text-lg">
        {commissionModel.description}
      </p>

      <div class="mb-10">
        <h4 class="text-lg font-semibold mb-6 text-center">What's Included</h4>
        <div class="grid md:grid-cols-2 gap-4">
          {
            commissionModel.inclusions.map((inclusion) => (
              <div class="flex items-start">
                <svg
                  class="w-5 h-5 text-green-500 mr-3 mt-1 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  />
                </svg>
                <span class="text-gray-700">{inclusion}</span>
              </div>
            ))
          }
        </div>
      </div>

      <div class="mb-8">
        <h4 class="text-2xl font-bold mb-2 text-center text-gray-900">
          Our Service Fee Structure
        </h4>
        <p class="text-center text-gray-600 mb-8">
          We only charge a percentage of your total commission earned
        </p>

        <div class="grid md:grid-cols-2 gap-6">
          {
            commissionModel.tiers.map((tier, index) => (
              <div class="bg-gradient-to-br from-gray-50 to-white rounded-xl p-6 border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="text-center mb-4">
                  <div class="text-3xl font-bold text-c-battle-red mb-2">
                    {tier.fee}
                  </div>
                  <div class="text-sm text-gray-500 font-medium">
                    Service Fee
                  </div>
                </div>

                <div class="space-y-3">
                  <div>
                    <div class="font-semibold text-gray-900 text-sm">
                      {tier.range}
                    </div>
                    <div class="text-xs text-gray-600">{tier.description}</div>
                  </div>

                  <div class="pt-3 border-t border-gray-100">
                    <div class="text-xs text-gray-600 leading-relaxed">
                      {tier.example}
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>

        <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
          <div class="flex items-start">
            <svg
              class="w-5 h-5 text-blue-500 mr-3 mt-0.5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path>
            </svg>
            <div class="text-sm text-blue-800">
              <strong>How it works:</strong> You keep the majority of your commission,
              and we take our service fee based on the tier your total commission
              falls into. The more you earn, the lower our percentage becomes.
            </div>
          </div>
        </div>
      </div>

      <div class="text-center">
        <a
          href="#contact"
          class="inline-block px-8 py-4 rounded-lg font-semibold transition-colors bg-c-battle-red text-white hover:bg-red-700 text-lg"
        >
          Start Earning Today
        </a>
      </div>
    </div>
  </div>
</section>
